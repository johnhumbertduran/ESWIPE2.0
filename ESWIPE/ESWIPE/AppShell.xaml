    <!--<Shell.FlyoutHeader>
        <local:HeaderContentView/>
    </Shell.FlyoutHeader>-->

    <ShellItem FlyoutItemIsVisible="False" Route="SplashPage">
        <ShellContent ContentTemplate="{DataTemplate local:SplashPage}" />
    </ShellItem>


    <!--<FlyoutItem Title="About" Icon="icon_about.png">

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESWIPE.Views.TestRegisterPage"
             xmlns:viewmodels="clr-namespace:ESWIPE.ViewModels"
             x:DataType="viewmodels:TestRegisterViewModel"
             Title="Test Register">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Teacher Number" Text="{Binding TeacherDetail.TeacherNumber}" />
            <Entry Placeholder="Name" Text="{Binding TeacherDetail.Name}"  />
            <Entry Placeholder="Section" Text="{Binding TeacherDetail.Section}"  />
            <Entry Placeholder="Username" Text="{Binding TeacherDetail.Username}"  Keyboard="Numeric" />
            <Entry Placeholder="Password" Text="{Binding TeacherDetail.Password}"   />
            <Entry Placeholder="UserRole" Text="{Binding TeacherDetail.UserRole}"  />

            <Button Text="Save Details" Command="{Binding SaveTeacherCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>